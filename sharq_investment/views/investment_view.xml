    <!-- ********* form ************ -->
    <record model="ir.ui.view" id="investment_form">
      <field name="name">investment form</field>
      <field name="model">investment.investment</field>
      <field name="arch" type="xml">
        <form>
            <header>
                <button name="action_draft" string="Draf" type="object" 
                attrs="{'invisible': [('state', '=', 'draft')]}"/>

                <button name="action_approved" string="Approved" type="object"  
                attrs="{'invisible': [('state', '=', 'approved')]}"/>

                <field name="state" widget="statusbar" />
            </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="amount" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="state" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="employee info">
                            <group>
                                <field name="employee_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
        </form>
      </field>
    </record>
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="investment_action_window">
      <field name="name">Investment</field>
      <field name="res_model">investment.investment</field>
      <field name="view_mode">tree,form</field>
    </record>


