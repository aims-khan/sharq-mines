<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="investment_list">
      <field name="name">investment.list</field>
      <field name="model">investment.investment</field>
      <field name="arch" type="xml">
        <tree>
          <field name="employee_id"/>
          <field name="amount"/>
          <field name="state"/>
        </tree>
      </field>
    </record>
